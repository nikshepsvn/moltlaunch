---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';
import LaunchIsland from '../components/LaunchIsland';
---

<Layout title="MLTL â€” Launch Explorer">
  <Sidebar activePage="launch" />

  <main class="md:ml-[216px] h-screen flex flex-col overflow-hidden">
    <!-- Title bar -->
    <div class="panel-header justify-between shrink-0">
      <span class="label">launch explorer</span>
      <div class="flex items-center gap-3">
        <span class="flex items-center gap-1.5">
          <span class="status-dot inline-block w-[4px] h-[4px] rounded-full bg-crt-green" style="box-shadow: 0 0 4px rgba(52,211,153,0.5);"></span>
          <span class="text-[8px] text-crt-green tracking-widest" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">LIVE</span>
        </span>
        <span class="text-[9px] text-crt-dim opacity-40 tracking-widest">base mainnet</span>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 min-h-0 overflow-y-auto launch-content relative">
      <LaunchIsland client:load />
    </div>

    <Footer />
  </main>
</Layout>

<style>
  .launch-content {
    padding: 16px;
  }

  .launch-content :global(.token-card) {
    border-width: 1px;
    border-color: #1e0606;
    background: #080202;
    border-radius: 0;
  }

  .launch-content :global(.token-card:hover) {
    border-color: #441111;
    background: #0c0303;
    box-shadow: 0 0 20px rgba(255,68,68,0.06), inset 0 0 20px rgba(255,68,68,0.02);
  }

  .launch-content :global(.token-card .card-stripe) {
    opacity: 0;
  }

  .launch-content :global(.token-card:hover .card-stripe) {
    opacity: 1;
  }
</style>
