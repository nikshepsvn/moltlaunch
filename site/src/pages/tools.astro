---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

const liveCommands = [
  {
    name: 'swap',
    symbol: '⇄',
    cmd: 'mltl swap --token 0x7a3b...4f2e --amount 0.01 --side buy',
    desc: 'buy and sell tokens on uniswap v4. supports slippage control.',
  },
  {
    name: 'wallet',
    symbol: '■',
    cmd: 'mltl wallet',
    desc: 'show wallet address and balance. --show-key to reveal private key.',
  },
  {
    name: 'status',
    symbol: '◈',
    cmd: 'mltl status',
    desc: 'list your launched tokens with addresses and claimable fees.',
  },
  {
    name: 'fees',
    symbol: '◆',
    cmd: 'mltl fees',
    desc: 'check claimable fee balance across all your tokens.',
  },
  {
    name: 'claim',
    symbol: '↓',
    cmd: 'mltl claim',
    desc: 'withdraw accumulated trading fees. requires ETH for gas.',
  },
];

const upcoming = [
  {
    name: 'pay',
    symbol: '$',
    cmd: 'mltl pay --url "api.example.com" --amount 0.01',
    desc: 'pay for x402 APIs. agents pay per-call, no keys needed.',
  },
];
---

<Layout title="MLTL — Tools">
  <Sidebar activePage="tools" />

  <main class="md:ml-[216px] h-screen flex flex-col overflow-hidden">
    <!-- Title bar -->
    <div class="panel-header justify-between shrink-0">
      <span class="label">tools</span>
      <span class="text-[9px] text-crt-dim opacity-40 tracking-widest">6 commands</span>
    </div>

    <div class="flex-1 flex flex-col min-h-0 overflow-y-auto">

      <!-- ═══════════════════════════════════════════════════════ -->
      <!-- LAUNCH — Hero section                                  -->
      <!-- ═══════════════════════════════════════════════════════ -->
      <div class="launch-hero relative overflow-hidden border-b border-[#1e0606]">
        <!-- Background watermark -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none select-none overflow-hidden">
          <pre class="font-mono text-[48px] sm:text-[72px] leading-[1.15] watermark-text" aria-hidden="true">{
`┏┳┓┓ ╺┳╸┓
┃┃┃┃  ┃ ┃
╹ ╹┗━╸╹ ┗━╸`}</pre>
        </div>

        <!-- Ambient glow -->
        <div class="absolute inset-0 pointer-events-none" style="background: radial-gradient(ellipse at 50% 50%, rgba(255,40,40,0.04) 0%, transparent 60%);"></div>

        <!-- Content -->
        <div class="relative z-10 px-6 sm:px-10 py-10 sm:py-16">
          <!-- Tool name -->
          <pre class="font-mono text-[18px] sm:text-[24px] leading-[1.15] select-none mb-6" style="color: #ff4444; text-shadow: 0 0 12px rgba(255,68,68,0.7), 0 0 40px rgba(255,50,50,0.3), 0 0 80px rgba(200,0,0,0.12);">{
`┏┳┓┓ ╺┳╸┓   ┓  ┏━┓╻ ╻┏┓╻┏━╸╻ ╻
┃┃┃┃  ┃ ┃   ┃  ┣━┫┃ ┃┃┗┫┃  ┣━┫
╹ ╹┗━╸╹ ┗━╸ ┗━╸╹ ╹┗━┛╹ ╹┗━╸╹ ╹`}</pre>

          <p class="font-mono text-[14px] sm:text-[16px] text-crt-dim leading-relaxed mb-8">
            launch tokens on base. one command, tradeable instantly.
          </p>

          <!-- Terminal simulation -->
          <div class="launch-terminal border border-[#1e0606]">
            <div class="flex items-center gap-2 px-3 py-1.5 border-b border-[#1e0606]">
              <span class="w-[6px] h-[6px] rounded-full bg-[#1e0606]"></span>
              <span class="w-[6px] h-[6px] rounded-full bg-[#1e0606]"></span>
              <span class="w-[6px] h-[6px] rounded-full bg-[#1e0606]"></span>
              <span class="font-mono text-[8px] text-crt-dim opacity-30 ml-2">terminal</span>
            </div>
            <div class="p-5 font-mono text-[11px] sm:text-[12px] leading-[2.2]">
              <div class="flex gap-2">
                <span class="text-crt-green shrink-0" style="text-shadow: 0 0 8px rgba(52,211,153,0.5);">$</span>
                <span class="text-crt-accent-glow" style="text-shadow: 0 0 6px rgba(255,68,68,0.3);">npx moltlaunch launch --name "MyToken" --symbol "TKN" --image logo.png</span>
              </div>
              <div class="text-crt-dim opacity-50 mt-3">
                <div>⠋ setting up local wallet...</div>
                <div class="text-crt-green" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">✓ wallet created → 0x9f1c...8d3a</div>
                <div>⠋ deploying to base...</div>
                <div class="text-crt-green" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">✓ token deployed → 0x7a3b...4f2e</div>
                <div class="text-crt-green" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">✓ trading live on uniswap</div>
                <div class="text-crt-green" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">✓ earning swap fees</div>
              </div>
              <div class="mt-3 flex gap-2">
                <span class="text-crt-dim opacity-40">share:</span>
                <span class="text-crt-accent-glow opacity-70">https://app.uniswap.org/explore/tokens/base/0x7a3b...4f2e</span>
              </div>
            </div>
          </div>

          <!-- Details + CTA -->
          <div class="mt-8 grid grid-cols-1 sm:grid-cols-[1fr,auto] gap-6 items-end">
            <div class="font-mono text-[11px] leading-[2.2]">
              <div class="flex gap-2"><span class="text-crt-accent-dark shrink-0">›</span><span class="text-crt-text opacity-50">creates a local wallet for you automatically — no setup</span></div>
              <div class="flex gap-2"><span class="text-crt-accent-dark shrink-0">›</span><span class="text-crt-text opacity-50">deploys an ERC-20 token on base, tradeable on uniswap</span></div>
              <div class="flex gap-2"><span class="text-crt-accent-dark shrink-0">›</span><span class="text-crt-text opacity-50">completely gasless — only costs to claim earned fees</span></div>
            </div>

            <a
              href="/launch"
              class="inline-flex items-center gap-2 font-mono text-[11px] border border-[#2a0a0a] px-5 py-2.5 text-crt-accent-glow transition-all hover:border-[#441111] hover:bg-[rgba(255,68,68,0.04)] hover:shadow-[0_0_16px_rgba(255,68,68,0.08)] uppercase tracking-wider whitespace-nowrap"
              style="text-shadow: 0 0 8px rgba(255,68,68,0.4); text-decoration: none;"
            >
              explore launched tokens →
            </a>
          </div>
        </div>
      </div>

      <!-- ═══════════════════════════════════════════════════════ -->
      <!-- LIVE COMMANDS                                           -->
      <!-- ═══════════════════════════════════════════════════════ -->
      <div class="px-6 py-6">
        <div class="flex items-center gap-3 mb-5">
          <div class="h-px flex-1 bg-[#1e0606]"></div>
          <span class="font-mono text-[8px] text-crt-green opacity-60 tracking-[0.2em] uppercase" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">live</span>
          <div class="h-px flex-1 bg-[#1e0606]"></div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
          {liveCommands.map((tool) => (
            <div class="live-card border border-[#140505] p-4 transition-all relative overflow-hidden">
              <div class="flex items-center gap-2 mb-3">
                <span class="font-mono text-[14px] text-[#1e0606] select-none">{tool.symbol}</span>
                <span class="font-mono text-[14px] text-crt-text opacity-80 tracking-wide">mltl {tool.name}</span>
                <span class="inline-flex items-center gap-1 ml-auto">
                  <span class="w-[4px] h-[4px] rounded-full bg-crt-green" style="box-shadow: 0 0 4px rgba(52,211,153,0.5);"></span>
                  <span class="font-mono text-[7px] tracking-[0.2em] uppercase text-crt-green opacity-60" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">live</span>
                </span>
              </div>

              <div class="font-mono text-[9px] flex gap-2 mb-2 opacity-60">
                <span class="text-crt-green shrink-0 opacity-60">$</span>
                <span class="text-crt-dim truncate">{tool.cmd}</span>
              </div>

              <div class="font-mono text-[9px] text-crt-dim opacity-40 leading-relaxed">
                {tool.desc}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- ═══════════════════════════════════════════════════════ -->
      <!-- UPCOMING                                                -->
      <!-- ═══════════════════════════════════════════════════════ -->
      <div class="px-6 pb-6">
        <div class="flex items-center gap-3 mb-5">
          <div class="h-px flex-1 bg-[#1e0606]"></div>
          <span class="font-mono text-[8px] text-crt-dim opacity-40 tracking-[0.2em] uppercase">upcoming</span>
          <div class="h-px flex-1 bg-[#1e0606]"></div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
          {upcoming.map((tool) => (
            <div class="upcoming-card border border-[#140505] p-4 transition-all relative overflow-hidden">
              <div class="flex items-center gap-2 mb-3">
                <span class="font-mono text-[14px] text-[#1e0606] select-none">{tool.symbol}</span>
                <span class="font-mono text-[14px] text-crt-dim tracking-wide">mltl {tool.name}</span>
                <span class="font-mono text-[7px] tracking-[0.2em] uppercase text-crt-dim opacity-30 ml-auto">coming soon</span>
              </div>

              <div class="font-mono text-[9px] flex gap-2 mb-2 opacity-60">
                <span class="text-crt-green shrink-0 opacity-40">$</span>
                <span class="text-crt-dim truncate">{tool.cmd}</span>
              </div>

              <div class="font-mono text-[9px] text-crt-dim opacity-40 leading-relaxed">
                {tool.desc}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom: repeating mltl pattern -->
      <div class="flex-1 flex items-center justify-center shrink-0 overflow-hidden tools-pattern-wrap min-h-[60px]">
        <pre class="font-mono text-[8px] leading-[1.15] select-none tools-pattern">{
`┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓
┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃
╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸
┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓ ┏┳┓┓ ╺┳╸┓
┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃ ┃┃┃┃  ┃ ┃
╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸╹ ╹┗━╸╹ ┗━╸`
        }</pre>
      </div>
    </div>

    <Footer />
  </main>
</Layout>

<style>
  .launch-hero {
    background: linear-gradient(180deg, #0a0303 0%, #080202 100%);
  }

  .watermark-text {
    color: #0a0303;
    animation: watermark-pulse 6s ease-in-out infinite;
  }

  @keyframes watermark-pulse {
    0%, 100% { color: #0a0303; }
    50% { color: #0e0404; text-shadow: 0 0 40px rgba(255,68,68,0.02); }
  }

  .launch-terminal {
    background: #050101;
  }

  .live-card {
    background: #080202;
  }

  .live-card:hover {
    border-color: #1e0606;
    background: #0a0303;
  }

  .upcoming-card {
    background: #080202;
    opacity: 0.6;
  }

  .upcoming-card:hover {
    border-color: #1e0606;
    background: #0a0303;
    opacity: 0.8;
  }

  .tools-pattern-wrap {
    mask-image: radial-gradient(ellipse at center, rgba(0,0,0,0.5) 0%, transparent 80%);
    -webkit-mask-image: radial-gradient(ellipse at center, rgba(0,0,0,0.5) 0%, transparent 80%);
  }

  .tools-pattern {
    color: #1a0808;
  }
</style>
