---
const data = [
  '▓▓▓', 'LAUNCH', '▒▒', 'TRADE', '░░░', 'PAY', '▓▓', 'EARN',
  '█▓▒░', 'ONCHAIN', '▒▓█', 'AGENTS', '░▒▓', 'BASE', '▓░▒',
  'MLTL', '▓▓▓', 'DEPLOY', '▒▒', 'SWAP', '░░░', 'CONNECT',
];
// Duplicate for seamless loop
const tickerText = [...data, ...data].map(d => d).join('  ·  ');
---

<div class="ticker-wrap border-b border-[#1e0606] overflow-hidden relative">
  <div class="absolute inset-0 pointer-events-none z-10"
    style="background: linear-gradient(90deg, #050101 0%, transparent 8%, transparent 92%, #050101 100%);">
  </div>
  <div class="ticker-track font-mono text-[9px] tracking-widest uppercase py-1.5 whitespace-nowrap text-crt-dim opacity-40">
    {tickerText}
  </div>
</div>

<style>
  .ticker-track {
    display: inline-block;
    animation: ticker-scroll 40s linear infinite;
  }

  @keyframes ticker-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>
