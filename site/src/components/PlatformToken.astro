---
const TOKEN_ADDRESS = '0xA448d40f6793773938A6B7427091c35676899125';
const BASESCAN_URL = `https://basescan.org/token/${TOKEN_ADDRESS}`;
const chunks = TOKEN_ADDRESS.match(/.{1,6}/g) || [];
---

<div class="token-panel border-r border-[#1e0606] flex flex-col relative overflow-hidden">
  <!-- Scrolling background pattern -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden select-none flex flex-col justify-between py-6"
    style="mask-image: radial-gradient(ellipse at center, rgba(0,0,0,0.6) 0%, transparent 75%); -webkit-mask-image: radial-gradient(ellipse at center, rgba(0,0,0,0.6) 0%, transparent 75%);">
    {[
      { text: 'MLTL · 0xA448d40f · BASE · ERC-20 · ', dir: 'fwd' as const, speed: '30s', offset: '0s' },
      { text: '8453 · PLATFORM TOKEN · UNISWAP · ONCHAIN · ', dir: 'rev' as const, speed: '35s', offset: '0s' },
      { text: 'LAUNCH · TRADE · PAY · EARN · ', dir: 'fwd' as const, speed: '28s', offset: '-8s' },
      { text: 'MLTL · 0xA448d40f · BASE · ERC-20 · ', dir: 'rev' as const, speed: '32s', offset: '-15s' },
      { text: '8453 · PLATFORM TOKEN · UNISWAP · ONCHAIN · ', dir: 'fwd' as const, speed: '34s', offset: '-5s' },
      { text: 'LAUNCH · TRADE · PAY · EARN · ', dir: 'rev' as const, speed: '30s', offset: '-12s' },
    ].map((row) => (
      <div
        class={row.dir === 'fwd' ? 'token-marquee' : 'token-marquee-reverse'}
        class:list={['font-mono text-[9px] whitespace-nowrap opacity-[0.05]']}
        style={`color: #ff4444; animation-duration: ${row.speed}; animation-delay: ${row.offset};`}
      >
        <span>{row.text.repeat(8)}</span>
        <span>{row.text.repeat(8)}</span>
      </div>
    ))}
  </div>

  <!-- Panel header -->
  <div class="panel-header justify-between relative z-10">
    <span class="label">$MLTL</span>
    <a
      href={BASESCAN_URL}
      target="_blank"
      rel="noopener noreferrer"
      class="text-[8px] text-crt-dim hover:text-crt-accent-glow transition-colors tracking-widest uppercase"
    >basescan ↗</a>
  </div>

  <div class="flex-1 p-5 relative z-10 flex flex-col items-center justify-center">
    <!-- Corner accents -->
    <span class="absolute top-3 left-3 font-mono text-[12px] select-none leading-none corner-accent">┌──</span>
    <span class="absolute top-3 right-3 font-mono text-[12px] select-none leading-none text-right corner-accent">──┐</span>
    <span class="absolute bottom-3 left-3 font-mono text-[12px] select-none leading-none corner-accent">└──</span>
    <span class="absolute bottom-3 right-3 font-mono text-[12px] select-none leading-none text-right corner-accent">──┘</span>

    <!-- Big token symbol -->
    <div class="token-display text-center mb-1">
      <pre class="token-symbol font-mono text-[18px] sm:text-[24px] leading-[1.15] inline-block text-left">
{`┏┳┓┓ ╺┳╸┓
┃┃┃┃  ┃ ┃
╹ ╹┗━╸╹ ┗━╸`}
      </pre>
    </div>

    <!-- Token label -->
    <div class="font-mono text-[8px] text-crt-dim opacity-30 tracking-[0.3em] uppercase mb-4">platform token</div>

    <!-- Address chunks -->
    <div class="overflow-hidden">
      <div class="address-flow flex gap-[3px] justify-center flex-wrap">
        {chunks.map((chunk, i) => (
          <span
            class="address-chunk font-mono text-[9px] px-1.5 py-0.5"
            style={`animation-delay: ${i * 0.15}s;`}
          >{chunk}</span>
        ))}
      </div>
    </div>

    <!-- Token details row -->
    <div class="mt-5 flex items-center justify-center gap-4 font-mono text-[9px]">
      <div class="flex items-center gap-1.5">
        <span class="status-dot inline-block w-[5px] h-[5px] rounded-full bg-crt-green" style="box-shadow: 0 0 6px rgba(52,211,153,0.5);"></span>
        <span class="text-crt-green" style="text-shadow: 0 0 6px rgba(52,211,153,0.3);">BASE</span>
      </div>
      <span class="text-[#1e0606]">│</span>
      <span class="text-crt-dim">ERC-20</span>
      <span class="text-[#1e0606]">│</span>
      <span class="text-crt-dim">8453</span>
    </div>
  </div>
</div>

<style>
  .token-panel {
    background: linear-gradient(180deg, #080202 0%, #060101 50%, #080202 100%);
  }

  .token-marquee {
    display: inline-block;
    animation: marquee-scroll 30s linear infinite;
  }

  .token-marquee-reverse {
    display: inline-block;
    animation: marquee-scroll-reverse 35s linear infinite;
  }

  @keyframes marquee-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes marquee-scroll-reverse {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  .token-symbol {
    color: #ff4444;
    text-shadow:
      0 0 20px rgba(255,68,68,0.6),
      0 0 60px rgba(255,50,50,0.25),
      0 0 100px rgba(200,0,0,0.1);
    animation: symbol-breathe 4s ease-in-out infinite;
  }

  @keyframes symbol-breathe {
    0%, 100% {
      text-shadow:
        0 0 20px rgba(255,68,68,0.6),
        0 0 60px rgba(255,50,50,0.25),
        0 0 100px rgba(200,0,0,0.1);
    }
    50% {
      text-shadow:
        0 0 25px rgba(255,68,68,0.8),
        0 0 70px rgba(255,50,50,0.35),
        0 0 120px rgba(200,0,0,0.15);
    }
  }

  .address-chunk {
    color: #994444;
    background: rgba(255,68,68,0.03);
    border: 1px solid #1e0606;
    animation: chunk-fade 3s ease-in-out infinite;
    transition: all 0.2s;
  }

  .address-chunk:hover {
    color: #ff4444;
    border-color: #331010;
    background: rgba(255,68,68,0.08);
    text-shadow: 0 0 6px rgba(255,68,68,0.4);
  }

  @keyframes chunk-fade {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .corner-accent {
    color: #ff4444;
    opacity: 0.25;
    text-shadow: 0 0 8px rgba(255,68,68,0.3);
    animation: corner-breathe 5s ease-in-out infinite;
  }

  @keyframes corner-breathe {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.35; }
  }
</style>
