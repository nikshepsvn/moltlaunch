---
const live = [
  { name: 'swap', desc: 'buy and sell tokens on uniswap v4' },
  { name: 'wallet', desc: 'show wallet address and balance' },
  { name: 'status', desc: 'list your launched tokens' },
  { name: 'fees', desc: 'check claimable fee balance' },
  { name: 'claim', desc: 'withdraw accumulated trading fees' },
];
const upcoming = [
  { name: 'pay', desc: 'pay for x402 APIs, no keys needed' },
];
---

<div class="flex flex-col overflow-hidden">
  <!-- Panel header -->
  <div class="panel-header justify-between">
    <span class="label">modules</span>
    <span class="text-[8px] text-crt-dim opacity-30 tracking-widest">1 upcoming</span>
  </div>

  <!-- Module list -->
  <div class="flex-1 p-3 font-mono text-[10px] leading-[2.4]">
    <!-- Live hero: launch -->
    <div class="flex items-baseline gap-2 mb-1">
      <span class="text-crt-green text-[9px]" style="text-shadow: 0 0 6px rgba(52,211,153,0.4);">●</span>
      <span class="text-crt-accent-glow" style="text-shadow: 0 0 6px rgba(255,68,68,0.3);">mltl launch</span>
    </div>
    <div class="text-[9px] text-crt-dim opacity-50 pl-[18px] -mt-1 mb-3">deploy tokens on base, one command</div>

    <!-- Live commands -->
    {live.map((mod) => (
      <div class="mb-1.5">
        <div class="flex items-baseline gap-2">
          <span class="text-crt-green text-[9px]" style="text-shadow: 0 0 6px rgba(52,211,153,0.4);">●</span>
          <span class="text-crt-text opacity-70">mltl {mod.name}</span>
        </div>
        <div class="text-[9px] text-crt-dim opacity-35 pl-[18px] -mt-0.5">{mod.desc}</div>
      </div>
    ))}

    <div class="h-px bg-[#1e0606] my-3"></div>

    <!-- Upcoming -->
    {upcoming.map((mod) => (
      <div class="mb-2.5">
        <div class="flex items-baseline gap-2">
          <span class="text-[9px] text-[#331010]">○</span>
          <span class="text-crt-dim">mltl {mod.name}</span>
        </div>
        <div class="text-[9px] text-crt-dim opacity-35 pl-[18px] -mt-0.5">{mod.desc}</div>
      </div>
    ))}
  </div>

  <!-- Bottom bar -->
  <div class="px-3 py-2 border-t border-[#1e0606]">
    <div class="flex items-end gap-[1px] h-[8px] feed-bars">
      {Array.from({ length: 32 }).map((_, i) => {
        const h = Math.abs(Math.sin(i * 0.4)) * 7 + 1;
        return (
          <div
            class="flex-1 feed-bar"
            style={`height: ${h}px; animation-delay: ${i * 0.06}s;`}
          />
        );
      })}
    </div>
  </div>
</div>

<style>
  .feed-bar {
    background: linear-gradient(0deg, #1e0606 0%, #ff4444 100%);
    border-radius: 1px 1px 0 0;
    opacity: 0.2;
    animation: bar-breathe 2s ease-in-out infinite;
  }

  @keyframes bar-breathe {
    0%, 100% { opacity: 0.1; transform: scaleY(0.7); }
    50% { opacity: 0.35; transform: scaleY(1.1); }
  }
</style>
